
[testenv:lint]
skipsdist = True
pip_pre = True
passenv =
  CFLAGS
  CPPFLAGS
  LDFLAGS
setenv =
  PYTHONPATH = {toxinidir}
deps =
  -rrequirements.txt
  -rtest_requirements.txt
  docformatter
  pylint >= 3.3.0, < 3.4.0
  setuptools
commands =
  docformatter --version
  pylint --version
  docformatter --check --diff --recursive ${paths_to_lint_python}
  pylint --rcfile=.pylintrc ${paths_to_lint_python}
